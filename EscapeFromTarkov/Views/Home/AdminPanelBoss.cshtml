@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавление данных о боссах";
}

<section>
    <form asp-action="AdminPanelBoss" method="get">
        <div class="grid-main">
            <div class="grid-container-main">
                <div><a asp-action="AdminPanelBoss">Боссы</a></div>
                <div><a asp-action="PrivateAcc">Карты</a></div>
                <div><a asp-action="Bosses">Оружие</a></div>
                <div><a asp-action="Cards">НПС</a></div>
                <div><a asp-action="NPS">Товары</a></div>
                <div><a asp-action="Assembly">Сборка</a></div>
            </div>
            <div class="boss-container">
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input type="file" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <textarea class="form-control"></textarea>
                    <span class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </form>
</section>