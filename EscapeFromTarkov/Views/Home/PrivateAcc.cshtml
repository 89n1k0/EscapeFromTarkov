@{
    Layout = "_Layout";
    ViewData["Title"] = "Личный кабинет";
}
@model Пользователь
<section>
    <form asp-action="PrivateAcc" method="post">
        <div class="grid-main">
            <div class="grid-container-main">
                <div><a asp-action="MainWindow">Об игре</a></div>
                <div><a asp-action="PrivateAcc">Личный кабинет</a></div>
                <div><a asp-action="Bosses">Боссы</a><</div>
                <div><a asp-action="Cards">Карты</a></div>
                <div><a asp-action="NPS">НПС</a></div>
            </div>
            <div class="main-container-privateacc">
                <div class="main-grid-item">Личный кабинет</div>
                <div class="text-item" style="grid-row:2;">Логин</div>
                <div class="text-item" style="grid-row:3;">Пароль</div>
                <div class="text-item" style="grid-row:4;">Выживания</div>
                <div class="text-item" style="grid-row:5;">Смерти</div>
                <div class="text-item" style="grid-row:6;">Потерян Безвести</div>
                <div class="text-item" style="grid-row:7;">Количество Рейдов</div>
                <div class="text-item" style="grid-row:8;">Убийства</div>
                <div class="text-item" style="grid-row:9;">Убийства Чвк</div>

                <input type="text" value="@Model.Логин" style="grid-row:2;" />
                <input type="password" value="@Model.Пароль" style="grid-row:3;" />
                <input type="number" value="@Model.Выживания" style="grid-row:4;" />
                <input type="number" value="@Model.Смерти" style="grid-row:5;" />
                <input type="number" value="@Model.ПотерянБезвести" style="grid-row:6;" />
                <input type="number" value="@Model.КоличествоРейдов" style="grid-row:7;" />
                <input type="number" value="@Model.Убийства" style="grid-row:8;" />
                <input type="number" value="@Model.УбийстваЧвк" style="grid-row:9;" />
                <button type="submit">Сохранить</button>
            </div>
        </div>
    </form>
</section>